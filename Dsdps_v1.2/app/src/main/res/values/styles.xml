<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Theme.Blue_Bg" parent="Theme.AppCompat.Light.DarkActionBar">
<!--  <style name="Theme.Blue_Bg" parent="android:Theme.Holo">  -->
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowNoTitle">true</item>
<!--    <item name="android:windowBackground">@drawable/load_pic</item>-->
  </style>

  <style name="debug_view_tv_style">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="download_task_info">
    <item name="android:textColor">#ffffff</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="dialog" parent="@android:style/Theme.Dialog">
    //Dialog的windowFrame框为无
    <item name="android:windowFrame">@null</item>
    //是否浮现在activity之上
    <item name="android:windowIsFloating">true</item>
    //是否半透明
    <item name="android:windowIsTranslucent">true</item>
    //是否显示title
    <item name="android:windowNoTitle">true</item>
    //设置dialog的背景
    <item name="android:background">@android:color/transparent</item>
    //显示区域背景是否透明
    <item name="android:windowBackground">@drawable/bg_fankui</item>
    //就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5
    <item name="android:backgroundDimAmount">0.1</item>
    //显示区域以外是否使用黑色半透明背景
    <item name="android:backgroundDimEnabled">true</item>
  </style>

  <style name="alerdialog" parent="@android:style/Theme.Dialog">
  </style>

  <style name="AnimBottom" parent="@android:style/Animation">
    <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
    <item name="android:windowExitAnimation">@anim/dialog_out</item>
  </style>
  <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/bg_checkbox</item>
  </style>
</resources>
