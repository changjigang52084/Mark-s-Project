<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@drawable/dialog_style_transparent</item>
    </style>

    <!-- 菜单  end -->

    <style name="text_style">
        <item name="android:textColor">@color/text_device_info</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="SpinnerTvStyle">
        <item name="android:textColor">@color/text_device_info</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_clear_imgbtn_style">
        <item name="android:layout_width">31dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/clear_btn</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 登录编辑框样式 -->
    <style name="edit_text_style">
        <item name="android:textColor">@color/base_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/base_white</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- topbar文字样式 -->
    <style name="text_topbar_style">
        <item name="android:textColor">@color/base_white</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 终端管理列表文字样式1 -->
    <style name="text_device_manager_style1">
        <item name="android:textColor">@color/text_device_info</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 终端管理列表文字样式2 -->
    <style name="text_device_manager_style2">
        <item name="android:textColor">@color/text_device_info</item>
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 终端管理列表文字样式3 -->
    <style name="text_device_manager_style3">
        <item name="android:textColor">@color/text_device_info</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 单选框样式 -->
    <style name="radio_btn_style">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:button">@drawable/radio_btn_selector</item>
    </style>

    <!-- 终端位置下拉菜单样式 -->
    <style name="location_spinner_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
    </style>

</resources>