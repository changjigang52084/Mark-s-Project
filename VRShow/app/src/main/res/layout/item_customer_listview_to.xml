<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/text_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您好，这个游戏怎么玩?"
        android:layout_marginRight="10dp"
        android:gravity="center|left"
        android:layout_centerVertical="true"
        android:background="@drawable/customer_to_message_bg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toLeftOf="@+id/customer_personal_icon_iv"/>

    <ImageView
        android:id="@+id/customer_personal_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/personal_default_icon" />

</RelativeLayout>
