<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_error_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e6e6e6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/page_no_have_bg_head_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/page_failed" />

        <TextView
            android:id="@+id/page_no_have_loading_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/page_no_have_bg_head_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="数据加载失败"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/page_no_have_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/page_no_have_loading_error"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="请检查你的手机是否连上网\n   点击按钮尝试重新加载"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12" />

        <Button
            android:id="@+id/page_no_have_reload_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/page_no_have_message_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_00b0c7"
            android:background="@drawable/rounded_button_center_transparent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="重新加载" />
    </RelativeLayout>

</RelativeLayout>