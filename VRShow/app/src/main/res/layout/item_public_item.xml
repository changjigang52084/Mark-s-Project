<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:listSelector="@color/color_transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/public_video_item_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_defult_icon"
        android:scaleType="fitXY" />
    <ImageView
        android:id="@+id/public_video_item_shenhe_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/assemble_shenhe"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/public_video_item_tab_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/public_video_item_icon_iv"
        android:layout_alignTop="@+id/public_video_item_icon_iv"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/public_video_item_center_content_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/public_video_item_icon_iv"
        android:background="@color/color_ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/public_video_item_bottom_text_left_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/public_video_item_bottom_text_one_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_333333"
                        android:layout_marginEnd="20dp"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/public_video_item_bottom_text_one_lever_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/color_00b0c7"
                        android:textSize="@dimen/middle_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/public_video_item_bottom_text_two_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/middle_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/public_video_item_bottom_text_right_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/public_video_item_bottom_lv_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/public_video_item_bottom_text_three_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/public_video_item_bottom_people_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/public_video_item_bottom_text_four_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/public_video_item_more_operation_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/arrow_down"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/public_video_item_delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/delete_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/public_video_item_more_operation_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/public_video_item_center_content_rl"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/lin_share"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/public_video_item_center_content_rl"
            android:background="@color/color_e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/public_video_item_zan_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/public_video_item_zan_ib"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:background="@color/color_transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/classify_detail_zan_normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/public_video_item_zan_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/public_video_item_zan_add_one_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/public_video_item_zan_num_tv"
                        android:text="+1"
                        android:textColor="@color/color_00b0c7"
                        android:textSize="@dimen/middle_text_size"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/public_video_item_download_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/public_video_item_download_ib"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:background="@color/color_transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/classify_detail_download_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:text="@string/downloads"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/middle_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/public_video_item_share_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/public_video_item_share_ib"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:background="@color/color_transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/classify_detail_share_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:text="@string/share"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/middle_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/public_video_item_collect_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/public_video_item_collect_ib"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:background="@color/color_transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/classify_detail_collect_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:text="@string/favorite"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/middle_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>