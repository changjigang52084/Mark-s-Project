<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@color/color_ffffff">

    <ImageView
        android:id="@+id/classify_recommend_video_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_defult_icon"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>
    
    <TextView
        android:id="@+id/classify_recommend_video_spit_vw"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/classify_recommend_video_icon_iv"
        android:background="@color/c_text_big_white"
        />

    <TextView
        android:id="@+id/classify_recommend_video_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="6dp"
        android:text="ssssss"
        android:layout_below="@+id/classify_recommend_video_icon_iv"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/middle_text_size" />

</RelativeLayout>