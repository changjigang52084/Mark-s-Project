<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/c_layout_white_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/user_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/c_text_middle_gray"
            android:textSize="@dimen/middle_text_size"
            android:text="@string/user_content" />

        <TextView
            android:id="@+id/user_content_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_content_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/c_text_big_blue"
            android:textSize="@dimen/middle_text_size"/>
    </RelativeLayout>
</RelativeLayout>