<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <ImageView
        android:id="@+id/user_linear_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/user_linear_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/user_linear_icon_iv"
        android:paddingEnd="0dp"
        android:paddingStart="15dp"
        android:textColor="@color/c_text_middle_gray"
        android:textSize="@dimen/middle_text_size" />

    <TextView
        android:id="@+id/user_linear_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/user_linear_text_tv"
        android:textColor="@color/c_text_big_blue"
        android:textSize="@dimen/middle_text_size" />


    <ImageView
        android:id="@+id/user_linear_right_arrow_iv"
        android:layout_width="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_right" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/user_linear_right_arrow_iv"
        android:background="@color/c_layout_blue_bg" />

</RelativeLayout>



