<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.xunixianshi.vrshow.customview.CircleImageView
            android:id="@+id/my_message_item_icon_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user_defult_icon" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/user_icon_bg_circle" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_message_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="aaaaaa"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/middle_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_message_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/my_message_item_name_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="aaaaaa"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/very_small_text_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/my_message_item_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="aaaaaa"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>

</LinearLayout>