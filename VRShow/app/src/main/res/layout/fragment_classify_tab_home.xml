<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hch.viewlib.widget.PullToRefreshScrollView
        android:id="@+id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.hch.viewlib.customview.viewpagercycletes.CycleViewPager
                android:id="@+id/classify_tab_home_cycle_view_icv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/classify_home_custom_list_one_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/classify_home_custom_list_one_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/big_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/arrow_right" />
                </RelativeLayout>

                <com.hch.viewlib.widget.NoScrollGridView
                    android:id="@+id/classify_home_custom_list_one_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/color_e6e6e6" />

                <com.hch.viewlib.customview.viewpagercycletes.CycleViewPager
                    android:id="@+id/classify_home_spread_one_cvp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tuiguangtu"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_dbdbdb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/classify_home_custom_list_two_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/classify_home_custom_list_two_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/big_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/arrow_right" />
                </RelativeLayout>

                <com.hch.viewlib.widget.NoScrollGridView
                    android:id="@+id/classify_home_custom_list_two_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/color_e6e6e6" />

                <com.hch.viewlib.customview.viewpagercycletes.CycleViewPager
                    android:id="@+id/classify_home_spread_two_cvp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tuiguangtu"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </com.hch.viewlib.widget.PullToRefreshScrollView>

    <include
        layout="@layout/public_item_net_fail"
        android:visibility="gone" />

    <View
        android:id="@+id/home_page_emity_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>