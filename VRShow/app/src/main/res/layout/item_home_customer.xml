    <!--android:layout_width="120dp"-->
    <!--android:layout_height="80dp"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="5dp"-->
    <!--android:layout_marginLeft="10dp"-->
    <!--android:layout_marginRight="10dp"-->
    <!--android:src="@drawable/image_defult_icon_small" />-->

    <ImageView
        android:id="@+id/home_customer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/home_customer_icon"
        android:layout_below="@+id/home_customer_icon">

        <TextView
            android:id="@+id/home_customer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:maxEms="11"
            android:maxLines="1"
            android:paddingTop="3dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/home_video_describe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/home_customer_tv"
            android:layout_below="@id/home_customer_tv"
            android:ellipsize="end"
            android:gravity="left|center"
            android:lines="1"
            android:maxEms="11"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/small_text_size" />

    </RelativeLayout>

</RelativeLayout>