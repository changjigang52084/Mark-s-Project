<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:listSelector="@color/color_transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/public_video_item_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_defult_icon"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/public_video_item_center_content_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/public_video_item_icon_iv"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/public_video_item_bottom_text_one_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/public_video_item_bottom_text_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/public_video_item_bottom_text_one_tv"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_e6e6e6" />
</LinearLayout>