<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/Play_videos_and_pictures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/videoblue"
            android:drawablePadding="40dp"
            android:gravity="center"
            android:text="@string/PlayPhoto"
            android:textColor="@color/MainBlue"
            android:textSize="40dp" />


        <TextView
            android:id="@+id/Show_pictures_and_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/photogray"
            android:drawablePadding="40dp"
            android:gravity="center"
            android:text="@string/PlayPhotoList"
            android:textColor="@color/transparent"
            android:textSize="40dp" />


        <TextView
            android:id="@+id/Main_interface_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/settinggray"
            android:drawablePadding="40dp"
            android:gravity="center"
            android:text="@string/Settings"
            android:textColor="@color/transparent"
            android:textSize="40dp" />


    </LinearLayout>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/vucatime_main" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <!--android:src="@mipmap/yunicon_not"-->
        <ImageView
            android:id="@+id/Cloud_Download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <!--android:src="@mipmap/wifi"-->
        <ImageView
            android:id="@+id/Cloud_Wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

</RelativeLayout>
