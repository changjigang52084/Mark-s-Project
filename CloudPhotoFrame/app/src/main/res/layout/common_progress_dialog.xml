<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:background="#7F02001B"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mProgressMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="15dp"
                android:text="1111"
                android:textColor="#FF000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mProgressNumber"
                android:layout_width="0.0px"
                android:layout_height="0.0px"
                android:layout_marginLeft="120.0px"
                android:gravity="center"
                android:text="2222222222"
                android:textColor="#FFFFFFFF"
                android:textSize="30.0px" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/mProgress"
            style="?android:progressBarStyle"
            android:layout_width="240.0dip"
            android:layout_height="27.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="25.0dip"
            android:progressDrawable="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/mProgressPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15.0dip"
            android:textColor="#FF000000"
            android:textSize="18.0sp"
            android:text="33333"
            android:typeface="normal" />
    </LinearLayout>
</RelativeLayout>
