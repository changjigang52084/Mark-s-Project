<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="早上"
            android:textSize="25sp"/>

        <RelativeLayout
            android:id="@+id/morning_drug_rl"
            style="@style/item_style">

            <TextView
                android:id="@+id/morning_eat_drug_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:text="设置早上吃药时间"
                android:textSize="20sp" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/morning_repeat_rl"
        style="@style/item_style">

        <TextView
            android:id="@+id/morning_tv_repeat"
            style="@style/item_text_style"
            android:layout_alignParentLeft="true"
            android:text="重复" />

        <TextView
            android:id="@+id/morning_arrow_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/acm" />

        <TextView
            android:id="@+id/morning_tv_repeat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/morning_arrow_one"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/morning_ring_rl"
        style="@style/item_style">

        <TextView
            android:id="@+id/morning_ring_tv"
            style="@style/item_text_style"
            android:layout_alignParentLeft="true"
            android:text="铃声" />

        <TextView
            android:id="@+id/morning_arrow_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/acm" />

        <TextView
            android:id="@+id/morning_tv_ring_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/morning_arrow_two"
            android:textColor="@color/black"
            android:textSize="20sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/morning_set_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="确定" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中午"
            android:textSize="25sp"/>

        <RelativeLayout
            android:id="@+id/noon_drug_rl"
            style="@style/item_style">


            <TextView
                android:id="@+id/noon_eat_drug_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="设置中午吃药时间"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/noon_repeat_rl"
            style="@style/item_style">

            <TextView
                android:id="@+id/noon_tv_repeat"
                style="@style/item_text_style"
                android:layout_alignParentLeft="true"
                android:text="重复" />

            <TextView
                android:id="@+id/noon_arrow_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/acm" />

            <TextView
                android:id="@+id/noon_tv_repeat_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/noon_arrow_one"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/noon_ring_rl"
            style="@style/item_style">

            <TextView
                android:id="@+id/noon_ring_tv"
                style="@style/item_text_style"
                android:layout_alignParentLeft="true"
                android:text="铃声" />

            <TextView
                android:id="@+id/noon_arrow_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/acm" />

            <TextView
                android:id="@+id/noon_tv_ring_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/noon_arrow_two"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/noon_set_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="确定" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晚上"
            android:textSize="25sp"/>

        <RelativeLayout
            android:id="@+id/evening_drug_rl"
            style="@style/item_style">

            <TextView
                android:id="@+id/evening_eat_drug_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="设置晚上吃药时间"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/evening_repeat_rl"
            style="@style/item_style">

            <TextView
                android:id="@+id/evening_tv_repeat"
                style="@style/item_text_style"
                android:layout_alignParentLeft="true"
                android:text="重复" />

            <TextView
                android:id="@+id/evening_arrow_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/acm" />

            <TextView
                android:id="@+id/evening_tv_repeat_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/evening_arrow_one"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/evening_ring_rl"
            style="@style/item_style">

            <TextView
                android:id="@+id/evening_ring_tv"
                style="@style/item_text_style"
                android:layout_alignParentLeft="true"
                android:text="铃声" />

            <TextView
                android:id="@+id/evening_arrow_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/acm" />

            <TextView
                android:id="@+id/evening_tv_ring_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/evening_arrow_two"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/evening_set_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>
